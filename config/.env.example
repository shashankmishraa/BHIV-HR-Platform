# BHIV HR Platform - Environment Configuration Template
# SECURITY WARNING: Never commit this file with actual values
# Copy this file to .env and update with secure production values

# Database Configuration - REQUIRED
# Use strong passwords and secure connection strings
DATABASE_URL=postgresql://username:SECURE_PASSWORD@host:5432/database
POSTGRES_USER=bhiv_user
POSTGRES_PASSWORD=GENERATE_SECURE_PASSWORD
POSTGRES_DB=bhiv_hr

# API Security - REQUIRED
# Generate cryptographically secure random keys
API_KEY_SECRET=GENERATE_SECURE_API_KEY_32_CHARS_MIN
CLIENT_ACCESS_CODE=GENERATE_SECURE_CLIENT_CODE

# Service URLs (for internal communication)
GATEWAY_URL=http://gateway:8000
AGENT_URL=http://agent:9000

# External URLs (for documentation)
PORTAL_URL=http://localhost:8501
CLIENT_PORTAL_URL=http://localhost:8502

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,http://localhost:8502,http://localhost:3000

# Feature Flags
ENABLE_SEMANTIC=false
ENABLE_AUTO_SYNC=true
ENABLE_VALUES_ASSESSMENT=true

# Performance Settings
MAX_CANDIDATES_PER_REQUEST=50
AI_MATCHING_TIMEOUT=15
DATABASE_POOL_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10