# BHIV HR Platform - Environment Template
# Copy this file to .env and update values for your environment

# Database Configuration
POSTGRES_USER=bhiv_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=bhiv_hr_nqzb
DATABASE_URL=postgresql://bhiv_user:your_password@localhost:5432/bhiv_hr_nqzb

# Database Schema Configuration (Priority 1 Fix)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bhiv_hr_nqzb
DB_USER=bhiv_user
DB_PASSWORD=your_secure_password_here
DB_SCHEMA_VERSION=v3.2.0
DB_AUTO_MIGRATE=true
DB_CONNECTION_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Security Configuration
API_KEY_SECRET=your_api_key_here
JWT_SECRET=your_jwt_secret_here

# Service URLs (Local Development)
GATEWAY_URL=http://localhost:8000
AGENT_SERVICE_URL=http://localhost:9000
PORTAL_URL=http://localhost:8501
CLIENT_PORTAL_URL=http://localhost:8502

# Environment
ENVIRONMENT=development

# Performance Configuration (Priority 2 Fix)
CACHE_TTL=300
MAX_RESPONSE_TIME_MS=500
ENABLE_PERFORMANCE_MONITORING=true
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Monitoring Configuration
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
ERROR_TRACKING_ENABLED=true

# Feature Flags
SECURITY_ENABLED=true
ENABLE_SEMANTIC=false
ENABLE_AUTO_SYNC=true